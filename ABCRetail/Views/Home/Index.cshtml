@{
    ViewData["Title"] = "Home";
}

<section class="hero">
    <div class="content">
        <div class="container">
            <div class="row align-items-center g-4">
                <div class="col-lg-7">
                    <span class="badge-pill mb-3"><i class="bi bi-lightning-charge-fill"></i> Fast • Simple • Azure-powered</span>
                    <h1 class="display-4 mb-3">
                        Welcome to <span style="color:#ff9f4d">ABC RETAIL</span> , <span style="color:#ff9f4d">A RAPIDLY</span><br />
                        GROWING ONLINE RETAILER
                    </h1>
                    
                    <p class="lead text-muted-2 mb-4">
                        MANAGE CUSTOMER & PRODUCTS WITH A SLEEK, BOLD DASHBOARD!!
                    </p>
                    <div class="d-flex gap-3">
                        <a asp-controller="Products" asp-action="Index" class="btn cta-btn">
                            <i class="bi bi-box-seam-fill me-2"></i> View Products
                        </a>
                        <a asp-controller="Customers" asp-action="Index" class="btn btn-ghost">
                            <i class="bi bi-people-fill me-2"></i> View Customers
                        </a>
                    </div>
                </div>

               
            </div>

            <div class="row g-3 mt-5">
                <div class="col-md-3">
                    <div class="stat">
                        <div class="num">@ViewBag.ProductCount</div>
                        <div class="label"><i class="bi bi-box-seam me-1"></i> Products</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat">
                        <div class="num">@ViewBag.CustomerCount</div>
                        <div class="label"><i class="bi bi-people me-1"></i> Customers</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat">
                        <div class="num">@ViewBag.BlobCount</div>
                        <div class="label"><i class="bi bi-image me-1"></i> Product Images</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat">
                        <div class="num">@ViewBag.QueueSize</div>
                        <div class="label"><i class="bi bi-inboxes me-1"></i> Queue Items</div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mt-5">
                <div class="col-md-3">
                    <div class="feature-card h-100">
                        <div class="feature-icon mb-3"><i class="bi bi-table"></i></div>
                        <h5 class="mb-2">Azure Tables</h5>
                        <p class="text-muted-2 mb-0">Lightweight NoSQL storage for Customers & Products with blazing fast reads.</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="feature-card h-100">
                        <div class="feature-icon mb-3"><i class="bi bi-images"></i></div>
                        <h5 class="mb-2">Blob Images</h5>
                        <p class="text-muted-2 mb-0">Upload product photos to a private container and keep them secure.</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="feature-card h-100">
                        <div class="feature-icon mb-3"><i class="bi bi-queue"></i></div>
                        <h5 class="mb-2">Queues</h5>
                        <p class="text-muted-2 mb-0">Events like “ProductCreated” are queued for background processing.</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="feature-card h-100">
                        <div class="feature-icon mb-3"><i class="bi bi-hdd-network"></i></div>
                        <h5 class="mb-2">File Shares</h5>
                        <p class="text-muted-2 mb-0">Simple append-only logs at <code>logs/app/events.log</code> for auditing.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
