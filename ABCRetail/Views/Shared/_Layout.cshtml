<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABCRetail</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap (from template) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm border-bottom">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <!-- Simple 2D/3D-ish logo (SVG gradient) -->
                    <svg width="32" height="32" viewBox="0 0 64 64" class="logo-iso">
                        <defs>
                            <linearGradient id="g1" x1="0" x2="1" y1="1" y2="0">
                                <stop offset="0" stop-color="#ff6b00" />
                                <stop offset="1" stop-color="#ffd4b0" />
                            </linearGradient>
                        </defs>
                        <rect x="8" y="8" width="48" height="48" rx="12" fill="url(#g1)" />
                        <path d="M22 40 L32 20 L42 40 Z" fill="#ffffff" opacity=".9" />
                    </svg>
                    <strong>ABC Retail</strong>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav" aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="Index"><i class="bi bi-people"></i> Customers</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index"><i class="bi bi-box-seam"></i> Products</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="pb-5">
        <main role="main" class="container-fluid p-0">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-4 text-center">
        <div class="container">
            <div class="small text-muted">© @DateTime.UtcNow.Year ABC Retail • Built with ASP.NET Core MVC + Azure Storage</div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
