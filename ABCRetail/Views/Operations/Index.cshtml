@{
    ViewData["Title"] = "Operations";
}
<h2>Operations Demo</h2>
@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}
<form asp-action="EnqueueAndLog" method="post" class="row gy-2">
    <div class="col-12 col-md-4">
        <label class="form-label">SKU</label>
        <input name="stock keeping unit" class="form-control" required />
    </div>
    <div class="col-12 col-md-4">
        <label class="form-label">Image Name (optional)</label>
        <input name="imageName" class="form-control" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Queue + Log</button>
    </div>
</form>
<p class="mt-3 text-muted">
    This writes to Queue <code>orders</code> and appends a line to File Share <code>logs/app/events.log</code>.
</p>
